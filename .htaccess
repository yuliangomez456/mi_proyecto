# Página inicial en views/
DirectoryIndex /views/index.php

RewriteEngine On
RewriteBase /

# Redirigir la raíz al index.php dentro de views
RewriteRule ^$ views/index.php [L]

# Evitar conflictos con archivos o carpetas reales
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Quitar la extensión .php de URLs (soporta subcarpetas)
RewriteRule ^(.+?)/?$ views/$1.php [L]

# Redirigir automáticamente URLs con .php a la versión sin extensión
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.php[?\s] [NC]
RewriteRule ^ %1 [R=301,L]
